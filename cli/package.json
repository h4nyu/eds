{
  "name": "@kkpm/cli",
  "version": "0.1.0",
  "license": "MIT",
  "types": "index.ts",
  "scripts": {
    "build": "tsc --noEmit false",
    "clean": "tsc --build --clean",
    "prepack": "yarn build",
    "postpack": "yarn clean",
    "test": "jest",
    "cli": "yarn build && ts-node index.ts"
  },
  "bin": {
    "kkpm": "bin/app"
  },
  "dependencies": {
    "@kkpm/server": "^0.1.0",
    "pino": "^7.10.0",
    "yargs": "^17.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": ".*\\.(test|spec)?\\.(ts|tsx)$"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "jest": "^28.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
